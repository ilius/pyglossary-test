#!/bin/bash
set -x

EXTRA_ARGS="$@"

function convert() {
	echo "$1.dictionary"
	pyglossary "$1.dictionary" "$1.txt" \
		'--read-options=html_full=false' $EXTRA_ARGS
	echo
}

convert "002-simple"

convert "006-en-oxfjord_v10.5_c0_t0"
convert "006-en-oxfjord_v10.5_c1_t0"

convert "006-en-oxfjord_v10.6_c0_t0"
