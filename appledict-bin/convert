convert "006-en-oxfjord_v10.6_c0_t3"
convert "006-en-oxfjord_v10.6_c1_t0"
convert "006-en-oxfjord_v10.6_c1_t1"

convert "006-en-oxfjord_v10.6_c1_t3"
convert "006-en-oxfjord_v10.6_c2_t0"
convert "006-en-oxfjord_v10.6_c2_t1"

convert "006-en-oxfjord_v10.6_c2_t3"

convert "006-en-oxfjord_v10.11_c2_t3"

convert "006-en-oxfjord_v10.6_c0_t2"
# previously: [ERROR] WRONG priority or parental control:44 (section: 0x15e), skipping KeyText.data file


